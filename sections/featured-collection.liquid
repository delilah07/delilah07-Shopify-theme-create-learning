{% for product in section.settings.featured_collection.products %}
  {% render 'product-card', product_item: product %}
{% endfor %}

{% schema %}
{
    "name": "Featured Collection",
    "settings": [
       { 
            "type": "text",
            "id": "title",
            "default": "Featured collection",
            "label": "Title of collection"
        },
        {
            "type": "collection",
            "id": "featured_collection",
            "label": "Collection"
        }

    ]
}
{% endschema %}