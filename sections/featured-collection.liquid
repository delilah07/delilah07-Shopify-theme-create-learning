<div class="flex flex-col items-center my-8">
    <h1 class="text-center text-3xl">{{ section.settings.title }}</h1>
    <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-{% section.settings.number_of_products_to_show %} gap-4">
            {% for product in section.settings.featured_collection.products limit:section.settings.number_of_products_to_show %}
              {% render 'product-card', product_item: product %}
              {% else %}
                {% for item in (1..section.settings.number_of_products_to_show) %}
                    {% render 'product_card-placeholder' %}
                {% endfor %}
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Featured Collection",
    "settings": [
       { 
            "type": "text",
            "id": "title",
            "default": "Featured collection",
            "label": "Title of collection"
        },
        {
            "type": "collection",
            "id": "featured_collection",
            "label": "Collection"
        },
        {
            "type": "range",
            "id": "number_of_products_to_show",
            "min": 4,
            "max": 12,
            "default": 4,
            "label": "Number of showing cards"
        }

    ]
}
{% endschema %}