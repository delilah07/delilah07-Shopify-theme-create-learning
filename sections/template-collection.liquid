<div class="px-4 py-8">
    {% paginate collection.products by 3 %}
        <h1 class="text-center text-3xl">{{ collection.title }}</h1>
        <div class="max-w-6xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                {% for product in collection.products %}
                    <div class="border border-white bg-white shadow-lg rounded-lg overflow-hidden flex flex-col justify-between">
                        <a href="{{ product.url }}">
                            <div class=" overflow-hidden">
                                {% if product.featured_image %}
                                    <img class="w-full h-full object-cover" src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.featured_image.alt }}" width="auto" height="auto">
                                {% else %}  
                                    {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover ' }}
                                {% endif %}
                            </div>
                        </a>
                        <div class="flex flex-col p-4">
                            <span class="text-sm text-gray-400">{{ product.vendor }}</span>
                            <a href="{{ product.url }}" class="text-gray-700 uppercase font-medium">{{ product.title }}</a>
                            <p class="text-gray-500">{{ product.price | money }}</p>
                        </div>
                    </div>
                    {% else %}
                        <p>There are no products in this collection</p>
                   
                {% endfor %}
                
            </div>
        </div>
        {% render 'pagination', pagination: paginate %}
    {% endpaginate %}
</div>