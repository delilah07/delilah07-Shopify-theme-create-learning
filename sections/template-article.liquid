<h1>{{ article.title }}</h1>

{%  if section.settings.enable_author %}<small>{{ article.author }}</small>{% endif %}

{%  if section.settings.enable_date %}<time datetime="{{ article.published_at | date: '%d-%m-%Y' }}">{{ article.published_at | date: '%d %B %Y' }}</time>{% endif %}

<img src="{{ article.image | image_url: 'large' }}" alt="{{ article.image.image-alt }} " width="100%" height="auto">

<div>{{ article.content }}</div>

{% schema %}
    {
        "name" : "template article",
        "settings": [
            {
                "type": "checkbox",
                "id": "enable_author",
                "default": true,
                "label": "Add author name to blog"
            },
            {
                "type": "checkbox",
                "id": "enable_date",
                "default": true,
                "label": "Add date to blog"
            }

        ],
         "blocks": [
            {
                "type": "article_title",
                "name": "Title",
                "limit": 1
            },
            {
                "type": "article_author",
                "name": "Author",
                "limit": 1
            }
            ,
            {
                "type": "article_publised_date",
                "name": "Date",
                "limit": 1
            },
            {
                "type": "article_image",
                "name": "Image",
                "limit": 1
            },
            {
                "type": "article_content",
                "name": "Content",
                "limit": 1
            }

         ] 
    }
{% endschema %}