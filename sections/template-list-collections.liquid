<div class="flex flex-col items-center my-8">
    <h1 class="text-3xl font-medium">
        {{ section.settings.title }}
    </h1>
    <div class="max-w-6xl mx-auto my-3">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
            {% for collection in collections %}
            {% if collection.all_products_count > 0 %}
                <div class="w-full py-6 px-3">
                    <div class="border bg-white overflow-hidden">
                        <a href="{{ collection.url }}">
                            <div class="h-80 overflow-hidden">
                                {% if collection.featured_image != blank %}
                                {% assign collection_image = collection.featured_image %}
                                {% else %}
                                    {% assign collection_image = collection.product.first.image %} 
                                {% endif %}
                                <img class="w-full h-full object-cover transition duration-1000 ease-in-out transform hover:scale-105" src="{{ collection_image | img_url: 'medium' }}" width="100%" height="auto" alt="{{collection.title | escape}}">
                            </div>
                        </a>
                        <div class="p-4 gray-100">
                            <h2 class="text-xl"><a href="{{ collection.url }}" class="w-full block">{{ collection.title | camelize }}</a></h2>
                        </div>
                    </div>
                </div>
            {% endif %}
             {% endfor %}
         </div>
    </div>
</div>
    

{% schema %}
{
    "name": "Template List Collections",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "Collections",
            "label": "Title"
        }
    ]
}
{% endschema %}